<div class="clearfix" id="container">

  <div id="splash-info">
    <div class="page-header">
      <h1>QuickStudy</h1>
    </div>

      <div>
        <%= form_tag(session_path) do %>
          <%= label_tag(:username) %><br/>
          <%= text_field_tag(:username) %><br>
          <%= label_tag(:password) %><br>
          <%= password_field_tag(:password) %><br></br>
          <%= submit_tag('submit') %>

      </div>
      <br>
      <div class="signup">
        <p>not already a member? <%= link_to('Sign up!', new_user_path) %></p>
      </div>
      <% end %>
    </div>
  <div id="splash-sample">
    <div class="sample">
      <div class="card">
        <div class="index" id="flashcard-front"><p>flash card</p></div>
        <div id="flashcard-back"><p>A card containing a small amount of information, held up for students to see, as a learning aid.</p></div>
      </div>
    </div>
  </div>
</div>
