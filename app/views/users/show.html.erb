                              <br>
                                <li>
                                  <p id="stack-list-text"><%%= stack.category %></p>
                                </li>
                            </script>

                            <script type="text/template" id="card-template">
                              <div>
                                <div id="card-front-text">
                                  <ul>
                                    <li><%%= card.question %></li>
                                  </ul>
                                </div>
                                  <div id="card-back-text">
                                    <ul>
                                      <li><%%= card.answer %></li>
                                    </ul>
                                  </div>

                            </script>


                          </div>
                        <div id="flashcard-back">
                    </div>
                  </div>
                </div>
              </div>
